---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Badge from "../components/Badge.astro";
import LinkedIn from "../components/Icons/LinkedIn.astro";
import SocialPill from "../components/SocialPill.astro";
import GitHub from "../components/Icons/GitHub.astro";
import Mail from "../components/Icons/Mail.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../components/Icons/Briefcase.astro";
import Code from "../components/Icons/Code.astro";
import Proyects from "../components/Proyects.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Porfolio de Alejo Tassello - Desarrollador y Programador Web.">
  <main class="px-4">
    <SectionContainer class="py-44 pb-32">
      <h1 class="text-white text-2xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">
        Soy Alejo Tassello <a
          href="https://github.com/AlejoTss23"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center "
          ><Badge>Disponible para trabajar</Badge></a>
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span class="text-yellow-200">+1 año de experiencia. </span>
        <span class="text-white">  Desarrollador Web. <span/><span class="opacity-80"></span> De Hughes, Santa Fe. Especializado en el desarrollo de sitios web, Diseño adaptable y moderno.</span>
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill href="https://www.linkedin.com/in/alejotassello/">
          <LinkedIn class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
		<SocialPill href="https://github.com/AlejoTss23">
			<GitHub class="size-4 md:size-6" />
			GitHub
		</SocialPill>
		<SocialPill href="">
			<Mail class="size-4 md:size-6" />
			alejotassello23@gmail.com
		</SocialPill>
      </nav>


    </SectionContainer>

	<SectionContainer id="experiencia">
		<h2 class="text-2xl lg:text-3xl font-semibold mb-6 flex gap-x-3 items-center">
			<Briefcase class="size-7" />
			Experiencia laboral
		</h2>
		<Experience />
	</SectionContainer>

	<SectionContainer id="proyectos">
		<h2 class="text-2xl lg:text-3xl font-semibold mb-6 flex gap-x-3 items-center">
			<Code class="size-7" />
			Proyectos
		</h2>
		<Proyects />
	</SectionContainer>
	<Footer/>
  </main>
</Layout>
